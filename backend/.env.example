# ==================================================================================
# üéØ PIZOO DATING APP - ENVIRONMENT CONFIGURATION TEMPLATE
# ==================================================================================
# Copy this file to .env and fill in your actual values
# Last Updated: January 2025
# ==================================================================================

# ==================================================================================
# üß† CORE PROJECT SETTINGS
# ==================================================================================
PROJECT_NAME=Pizoo
AUTOFIX_ENABLED=false
ENVIRONMENT=production

# ==================================================================================
# üß∞ GITHUB INTEGRATION
# ==================================================================================
GITHUB_ACCESS_TOKEN=<your-github-personal-access-token>
GITHUB_ORG_NAME=Shatha-db
GITHUB_DEFAULT_REPO=pizoo-dating-app

# ==================================================================================
# üóÑÔ∏è DATABASE - MONGODB
# ==================================================================================
MONGO_URL=mongodb://localhost:27017
DB_NAME=test_database
MONGODB_URI=mongodb://localhost:27017/pizoo_database
MONGODB_DB_NAME=pizoo_database

# ==================================================================================
# üåê CORS & FRONTEND CONFIGURATION
# ==================================================================================
CORS_ORIGINS=https://your-domain.com,http://localhost:3000
FRONTEND_URL=https://your-domain.com

# ==================================================================================
# ‚òÅÔ∏è HETZNER CLOUD (VPS HOSTING)
# ==================================================================================
HETZNER_API_TOKEN=<your-hetzner-api-token>
HETZNER_SERVER_NAME=ubuntu-8gb-nbg1-3
HETZNER_BACKUP_ENABLED=true

# ==================================================================================
# üé• LIVEKIT (REAL-TIME VIDEO/VOICE CALLS)
# ==================================================================================
LIVEKIT_URL=wss://your-app-xxxxx.livekit.cloud
LIVEKIT_API_KEY=<your-livekit-api-key>
LIVEKIT_API_SECRET=<your-livekit-api-secret>

# ==================================================================================
# üì∏ CLOUDINARY (IMAGE STORAGE)
# ==================================================================================
CLOUDINARY_CLOUD_NAME=<your-cloud-name>
CLOUDINARY_API_KEY=<your-api-key>
CLOUDINARY_API_SECRET=<your-api-secret>
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_FOLDER=users
MAX_IMAGE_MB=5

# ==================================================================================
# üîê JWT AUTHENTICATION
# ==================================================================================
SECRET_KEY=<generate-secure-random-key>
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================================================================================
# üìß EMAIL SERVICE
# ==================================================================================
EMAIL_MODE=mock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<your-email@gmail.com>
SMTP_PASS=<your-app-password>
EMAIL_FROM="Pizoo App <your-email@gmail.com>"

# ==================================================================================
# üì± PHONE VERIFICATION
# ==================================================================================
TELNYX_API_KEY=<your-telnyx-api-key>

# ==================================================================================
# üîç SENTRY MONITORING
# ==================================================================================
SENTRY_API_KEY=<your-sentry-api-key>
SENTRY_DSN=<your-sentry-dsn>
SENTRY_PROJECT_NAME=python-fastapi
SENTRY_ENVIRONMENT=production

# ==================================================================================
# üí≥ PAYMENT PROCESSING
# ==================================================================================
STRIPE_PUBLIC_KEY=<your-stripe-public-key>
STRIPE_SECRET_KEY=<your-stripe-secret-key>

# ==================================================================================
# üß© FEATURE FLAGS
# ==================================================================================
ENABLE_AUTO_DEPLOY=false
ENABLE_AUTO_FIX=true
ENABLE_AUTO_BACKUP=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_VIDEO_CALLS=true

# ==================================================================================
# END OF CONFIGURATION
# ==================================================================================

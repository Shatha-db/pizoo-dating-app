# MongoDB Connection (REQUIRED)
MONGO_URL=mongodb://localhost:27017/pizoo_database
DB_NAME=pizoo_database

# Frontend URL for email magic links (REQUIRED for email verification)
FRONTEND_URL=https://<your-frontend>.emergent.host

# CORS Origins - comma-separated list of allowed origins (REQUIRED for production)
CORS_ORIGINS=https://pizoo.emergent.host,https://multilingual-date.emergent.host

# JWT Secret Key (REQUIRED)
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string

# LiveKit Configuration (REQUIRED for video/voice calls)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-server.com

# Email Configuration (Optional - defaults to 'mock' mode)
EMAIL_MODE=mock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Pizoo App <noreply@pizoo.app>

# Sentry Error Tracking (Optional)
SENTRY_DSN_BACKEND=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE=0.2
ENVIRONMENT=production

# Cloudinary Image Upload (Optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Telnyx/Twilio SMS OTP (Optional)
TELNYX_API_KEY=your-telnyx-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

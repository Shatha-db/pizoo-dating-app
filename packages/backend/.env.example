# ==================================================================================
# üóÑÔ∏è DATABASE CONFIGURATION (REQUIRED)
# ==================================================================================
# For Emergent deployments: This will be automatically provided by MongoDB Atlas
# Local development: mongodb://localhost:27017/pizoo_database
MONGO_URL=mongodb://localhost:27017/pizoo_database
DB_NAME=pizoo_database

# ==================================================================================
# üåê CORS & FRONTEND CONFIGURATION (REQUIRED)
# ==================================================================================
# Production: https://pizoo.ch
# Emergent: https://<your-app-name>.emergent.host
FRONTEND_URL=https://pizoo.ch
CORS_ORIGINS=https://pizoo.ch,https://www.pizoo.ch,https://<your-app-name>.emergent.host

# ==================================================================================
# üîê JWT AUTHENTICATION (REQUIRED)
# ==================================================================================
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ==================================================================================
# üîó EMERGENT OAUTH (Optional - has default)
# ==================================================================================
EMERGENT_OAUTH_URL=https://demobackend.emergentagent.com/auth/v1/env/oauth/session-data

# LiveKit Configuration (REQUIRED for video/voice calls)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-server.com

# Email Configuration (Optional - defaults to 'mock' mode)
EMAIL_MODE=mock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Pizoo App <noreply@pizoo.app>

# ==================================================================================
# üìä SENTRY ERROR TRACKING (Optional)
# ==================================================================================
SENTRY_DSN_BACKEND=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE=0.2
SENTRY_ENVIRONMENT=production
PROJECT_NAME=Pizoo
ENVIRONMENT=production

# Cloudinary Image Upload (Optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Telnyx/Twilio SMS OTP (Optional)
TELNYX_API_KEY=your-telnyx-api-key
TELNYX_PUBLIC_KEY=your-telnyx-public-key
TELNYX_MESSAGING_PROFILE_ID=your-messaging-profile-id
TELNYX_PHONE_NUMBER=+1234567890
TELNYX_API_VERSION=v2
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
